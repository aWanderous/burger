<div class="container">
  <div class="row">
    <h1>Eat-Da-Burger!</h1>

    <div class="card-deck">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title" id="add">Add-Da-Burger</h2>
          <form class="create-form">

            <div class="form-group">
              <label for="bun">Da-Burger's Name:</label>
              <input type="text" id="bun" name="burger_name">
            </div>

            <button type="submit" class="btn btn-secondary">Make!</button>
            </br>
            <img src="/images/cute.jpg" alt="Cute Burger">
          </form>
        </div>
      </div>

      <div class="card">
        <div class="card-body">
          <h2 class="card-title" id="menu">Da-Burgers</h2>

          <ul class="list-group list-group-flush">
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-made devoured=false}}
            {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <h2 id="eaten">Da-Burgers Eaten</h2>

          <ul class="list-group list-group-flush">
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-eaten  devoured=true}}
            {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>